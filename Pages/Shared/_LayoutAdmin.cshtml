                        <a asp-page="/Admin/SemesterPage/Semester" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Semester</span>
                        </a>

                        <a asp-page="/Admin/ClassPage/Class" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Class</span>
