                        <a asp-page="/Admin/SubjectPage/Subject" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Subject</span>
                        </a>

                        <a asp-page="/Admin/GradePage/Grade" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
